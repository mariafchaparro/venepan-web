<section class="mt-12 md:w-1/2 md:mt-0">
    <form action="POST" class="flex flex-col w-full text-sm text-gray-800 p-2 md:max-w-[500px] md:justify-self-end md:gap-3">
        <div class="flex flex-col mb-4 gap-2">
          <label for="nombre-completo" class="font-medium">Nombre y apellido</label>
          <input type="text" name="nombre-completo" id="nombre-completo" placeholder="Tu nombre y apellido" required class="border border-light-gray p-3 rounded-lg">
        </div>
    
        <div class="flex flex-col mb-4 gap-2">
          <label for="telefono" class="font-medium">Número de teléfono</label>
          <input type="tel" name="telefono" id="telefono" placeholder="Tu número de teléfono" required class="border border-light-gray p-3 rounded-lg">
        </div>
    
        <div class="flex flex-col mb-4 gap-2">
          <label for="correo" class="font-medium">Correo electrónico</label>
          <input type="email" name="correo" id="correo" placeholder="Tu correo electrónico" required class="border border-light-gray p-3 rounded-lg">
        </div>
    
        <div class="flex flex-col mb-4 gap-2">
          <label for="mensaje" class="font-medium">Mensaje</label>
          <input type="text" name="mensaje" id="mensaje" placeholder="Escrible tu mensaje aquí" required class="border border-light-gray p-3 rounded-lg">
        </div>
    
        <button type="submit" class="btn w-full mt-3">Enviar</button>
    </form>
</section>