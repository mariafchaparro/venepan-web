---
import AuthLayout from "../layouts/AuthLayout.astro";

---

<AuthLayout title="Recover password">
    <section class="relative flex justify-center items-center h-dvh w-dvw bg-white">
        <div class="absolute top-5 left-3 flex items-center">
            <img src="/icons/chevron-left.svg" alt="Flecha atrás" class="w-4" />
        
            <a href="/" class="text-gray-600 text-sm hover:underline">Volver al inicio</a>
        </div>

        <div class="flex flex-col items-center justify-center bg-white p-8 gap-10">
            <img src="/icons/logo.svg" alt="Venepan Logo" class="w-20" />

            <div class="flex flex-col justify-center items-center gap-2">
                <h1 class="text-gray-800 font-semibold text-3xl text-center">¿Olvidaste tu contraseña?</h1>
                <p class="text-gray-600 mb-0 w-[40ch] text-center">No te preocupes, te enviaremos instrucciones para restablecerla</p>
            </div>

            <form id="recover-form" class="flex flex-col gap-6 w-80">
                <div id="error-message" class="max-w-[40ch] bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded  justify-center hidden">
                </div>

                <div id="success-message" class="max-w-[40ch] bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded  justify-center hidden">
                </div>

                <input
                    id="email"
                    name="email"
                    type="email"
                    placeholder="Email"
                    class="border-b-2 border-light-gray p-3 focus:border-primary outline-none"
                    required
                    autocomplete="email"
                />

                <button type="submit" id="submit-btn" class="btn disabled:opacity-50 mt-4">
                    Enviar
                </button>

                <a href="/ingresar" class="text-primary self-center hover:underline">
                    Volver al Inicio de Sesión
                </a>
            </form>
        </div>
    </section>
<AuthLayout/>

<script>
    const form = document.getElementById('recover-form') as HTMLFormElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const errorMessage = document.getElementById('error-message') as HTMLDivElement;
    const successMessage = document.getElementById('success-message') as HTMLDivElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

    let loading = false;

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
    
        if (loading) return;
        
        loading = true;
        submitBtn.disabled = true;
        submitBtn.textContent = 'Enviando...';
        errorMessage.classList.add('hidden');
        successMessage.classList.add('hidden');

        const formData = new FormData(form);
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        // Validación del email
        if (!emailInput.value || emailInput.value.trim() === "" || !emailRegex.test(emailInput.value)) {
            errorMessage.textContent = 'Ingresa un email válido';
            errorMessage.classList.remove('hidden');
            loading = false;
            submitBtn.disabled = false;
            submitBtn.textContent = 'Enviar';
            return;
        }

        try {
            const response = await fetch('/api/auth/recover-password', {
                method: 'POST',
                body: formData,
            });

            const data = await response.json();

            if (!response.ok) {
                errorMessage.textContent = data.error || 'Error al enviar el email. Verifica que sea correcto.';
                errorMessage.classList.remove('hidden');
            } else {
                successMessage.textContent = data.message || 'Se ha enviado un enlace de recuperación a tu email.';
                successMessage.classList.remove('hidden');
                emailInput.value = '';
            }
        } catch (error) {
            errorMessage.textContent = 'Error de conexión';
            errorMessage.classList.remove('hidden');
        } finally {
            loading = false;
            submitBtn.disabled = false;
            submitBtn.textContent = 'Enviar';
        }
    });
</script>